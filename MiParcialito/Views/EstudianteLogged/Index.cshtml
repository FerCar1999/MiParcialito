@model List<MiParcialito.Models.Inscripcion>

@{
    ViewData["Title"] = "Inicio de Sesión Estudiante";
    Layout = "~/Views/Shared/_LayoutLoggin.cshtml";
}

<h1>Bienvenido: @ViewBag.estudiante.Nombre</h1>
<h1>Mis Cursos</h1>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model){
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Curso: @Html.DisplayFor(modelItem => item.Curso.NombreCurso)</h5>
                        <p class="card-text">Maestro: @Html.DisplayFor(modelItem => item.Curso.User.Email)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<hr />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
